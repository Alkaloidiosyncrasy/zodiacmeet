<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= profile.name %></h1>
        <div style="width: 30%; margin: 50px auto;">
            <form action="/profiles/<%= profile._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="profile[name]" value="<%= profile.name %>">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="number" name="profile[age]" value="<%= profile.age %>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="profile[image]" value="<%= profile.image %>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="profile[description]" value="<%= profile.description %>">
                </div>
                
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>               
            </form>
            <a href= "/profiles">Go back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>

