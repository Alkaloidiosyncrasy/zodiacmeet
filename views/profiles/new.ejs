<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new profile</h1>
        <div style="width: 30%; margin: 50px auto;">
            <form action="/profiles" method="POST">

                <div class="form-group">
                    <input id="form-name" type="text" name="name" placeholder="name">
                </div>

                <div class="form-group">
                    <input class="birth" type="number" name="day" placeholder="day of birth">
                </div>

                <div class="form-group">
                    <input class="birth" type="number" name="month" placeholder="month of birth">
                </div>

                <div class="form-group">
                    <input class="birth" type="number" name="year" placeholder="year of birth">
                </div>

                <div class="form-group">
                    <input class="birth" type="datetime" name="time" placeholder="time of birth">
                </div>

                <div class="form-group">
                    <input id="form-place" type="text" name="place" placeholder="place of birth">
                </div>

                <div class="form-group">
                    <input id="form-description" type="text" name="description" placeholder="description">
                </div>
                
                <div class="form-group">
                    <button class="btn">Submit</button>
                </div>               
            </form>
            <div id="back"><a id="goback" href= "/profiles"> Go back </a></div>
        </div>
    </div>
</div>

<% include ../partials/footer %>

